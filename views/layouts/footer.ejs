<script>
  window.addEventListener('scroll', function() {
    const navbar = document.getElementById('mainNavbar');
    if (window.scrollY > 50) {
      navbar.classList.add('scrolled');
    } else {
      navbar.classList.remove('scrolled');
    }
  });
</script>
<script>
  let skip = 6;

  document.getElementById("loadMoreBtn").addEventListener("click", async () => {
    try {
      const res = await fetch(`/load-more-blogs?skip=${skip}`);
      const data = await res.json();
      skip += data.blogs.length;

      if (data.blogs.length === 0) {
        document.getElementById("loadMoreBtn").style.display = "none";
        return;
      }

      const container = document.getElementById("blog-container");
      data.blogs.forEach(blog => {
        const col = document.createElement("div");
        col.className = "col-md-4 blog-post";

        col.innerHTML = `
          <div class="blog-box">
            <img src="${blog.image.url}" alt="blog" width="316" height="210" />
            <h3>${blog.title}</h3>
            <p>by <span>Arpit Mittal</span> on <span>${new Date(blog.createdAt).toLocaleDateString('en-US', {
              year: 'numeric', month: 'long', day: 'numeric'
            })}</span></p>
            <p>${blog.description.slice(0, 100)}</p>
            <a href="/blog-details/${blog._id}" class="btn btn-danger">Read more...</a>
          </div>
        `;
        container.appendChild(col);
      });
    } catch (err) {
      console.error(err);
    }
  });
</script>



