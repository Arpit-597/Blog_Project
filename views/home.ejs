    background-size: cover;
    background-repeat: no-repeat;
    background-position: center center;
    color: #f8f9fa;
  }

  .blog-box {
    display: flex;
    flex-direction: column;
    height: 100%;
    background-color: #22252b;
    border-radius: 10px;
    padding: 20px;
    margin-bottom: 30px;
    color: #f8f9fa;
    box-shadow: 0 0 20px rgba(0, 255, 100, 0.1);
    transition: transform 0.2s ease-in-out;
    justify-content: space-between;
  }

  .blog-box:hover {
    transform: scale(1.02);
  }

  .blog-box img {
    width: 100%;
    border-radius: 8px;
    margin-bottom: 15px;
  }

  .blog-box h3 {
    color: #fff;
    font-size: 1.4rem;
  }

  .blog-box p {
    flex-grow: 1;
  }

  .blog-box p span {
    color: #30d98f;
    font-weight: 500;
  }

  .btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
  }

  .btn-danger:hover {
    background-color: #c82333;
    border-color: #bd2130;
  }

  #loadMoreBtn {
    border: 2px solid #30d98f;
    color: #30d98f;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  #loadMoreBtn:hover {
    background-color: #30d98f;
    color: #fff;
    transform: translateY(-1px);
  }

  .blog-box h3 {
    transition: color 0.3s ease;
  }

  .blog-box:hover h3 {
    color: #30d98f;
  }
