<section class="banner">
    <div class="position-relative text-white hero-section rounded">
      <div class="overlay d-flex align-items-center justify-content-center text-center px-3 px-md-5">
        <div class="intro-text-box">
          <h1 class="display-5 fw-bold">Welcome to SoulScript</h1>
          <p class="lead">
            Where every word is a window to the soul. Explore stories, reflections, and moments that inspire growth, connection, and creativity.
          </p>
        </div>
      </div>
  </div>

  <style>
    .hero-section {
      background-image: url('/assets/images/banner.jpg');
      background-size: cover;
      background-position: center;
      height: 80vh;
      border-radius: 1rem;
      overflow: hidden;
    }

    .overlay {
      background-color: rgba(0, 0, 0, 0.55);
      /* Slightly darker for better readability */
      height: 100%;
      width: 100%;
    }

    .intro-text-box {
      max-width: 800px;
    }

    .intro-text-box h1,
    .intro-text-box p {
      color: #fff;
      text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.7);
      /* Improves contrast */
    }

    @media (max-width: 767.98px) {
      .hero-section {
        height: auto;
        padding: 60px 0;
      }

      .intro-text-box h1 {
        font-size: 1.8rem;
      }

      .intro-text-box p {
        font-size: 1rem;
      }
    }
  </style>
</section>



<section class="featured-blog mtb-40">
  <div class="container">
    <div class="row" id="blog-container">
      <% blogs.forEach((blog,index)=> { %>
      <div class="col-md-4 mb-3">
        <div class="blog-box">
          <img src="<%= blog.image.url %>" alt="blog1" width="316" height="210" />
          <h3><%= blog.title.length > 20 
              ? blog.title.slice(0, 20) + '...' 
              : blog.title 
            %></h3>
          <p>by <span>Arpit Mittal</span> on
            <span>
              <%= new Date(blog.createdAt).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                    }) %>
            </span>
          </p>
          <p>
            <%= blog.description.length > 30 
              ? blog.description.slice(0, 30) + '...' 
              : blog.description 
            %>
          </p>
          <a href="/blog-details/<%= blog._id %>" class="btn btn-danger">Read more...</a>
        </div>
      </div>
      <% }) %>
    </div>
    <div class="text-center mt-4">
      <button id="loadMoreBtn" class="btn btn-outline-primary">
        <i class="fas fa-chevron-down"></i> Load More Blogs
      </button>
    </div>
  </div>
</section>
