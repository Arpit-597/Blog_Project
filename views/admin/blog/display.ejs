<%- include("../../layouts/header.ejs") %>
<%- include("../admin-sidebar.ejs") %>


<div class="col-md-9">
  <div class="dash-right">
    <div class="dash-header">
      <div class="dash-title">
        <h1>Blogs</h1>
      </div>
      <!-- Button trigger modal -->
      <div class="text-center d-flex align-items-center">
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal">
          Add Blog
        </button>
      </div>
    </div>
    <table class="table table-bordered table-striped">
      <thead>

        <tr>
          <th>#ID</th>
          <th>Title</th>
          <th>Description</th>
          <th>Image</th>
          <th>Posted On</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% blogs.forEach((blog,index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= blog.title %></td>
          <td>
            <p>
              <%= blog.description.length > 100 
                        ? blog.description.slice(0, 30) + '...' 
                        : blog.description 
                      %>
            </p>
          </td>
          <td>
            <div class="d-flex justify-content-center">
              <img src="<%= blog.image.url %>" alt="Blog_Photo">
            </div>
          </td>
          <td><%= new Date(blog.createdAt).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                    }) %>
          </td>
          <td>
            <button type="button" class="btn btn-info btn-sm mr-1" data-toggle="modal" data-target="#viewModal-<%= blog._id %>">
              <i class="fas fa-eye"></i>
            </button>
            <button type="button" class="btn btn-warning btn-sm mr-1" data-toggle="modal" data-target="#EditModal-<%= blog._id %>">
              <i class="fas fa-edit"></i>
            </button>
            <a href="/blogdelete/<%= blog._id %>" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></a>
          </td>
        </tr>

        <!-- Modal VIEW -->
        <div class="modal fade" id="viewModal-<%= blog._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">View Blog Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <div class="mb-3">
                  <label><b>Title</b></label>
                  <input type="text" name="title" id="title" class="form-control" readonly value="<%= blog.title %>">
                </div>
                <div class="mb-3">
                  <label><b>Description</b></label>
                  <textarea name="description" id="description" cols="30" rows="5" class="form-control" readonly><%= blog.description %></textarea>
                </div>
                <div class="mb-3 form-group">
                  <label><b>Uploaded Image</b></label>
                  <br>
                  <img src="<%= blog.image.url %>" alt="blogimage" width="200" class="mt-1">
                </div>


                <div class="mb-3">
                  <label><b>Created On</b></label>
                  <input type="date" name="createdAt" id="createdAt" class="form-control" readonly value="<%= blog.createdAt.toISOString().split('T')[0] %>">
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Modal EDIT -->
        <div class="modal fade" id="EditModal-<%= blog._id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <form action="/blogupdate/<%= blog._id %>" method="post" enctype="multipart/form-data">
                  <!-- Title -->
                  <div class="form-group mb-3">
                    <label for="title" class="form-label fw-bold">Title</label>
                    <input type="text" name="title" id="title" class="form-control" value="<%= blog.title %>" required>
                  </div>
                  <!-- Description -->
                  <div class="form-group mb-3">
                    <label for="description" class="form-label fw-bold">Description</label>
                    <textarea name="description" id="description" rows="4" class="form-control" required><%= blog.description %></textarea>
                  </div>
                  <!-- Image Upload -->
                  <div class="form-group mb-3">
                    <label for="image" class="form-label fw-bold">Upload New Image</label>
                    <input class="form-control" type="file" id="image" name="image" accept="image/*">
                  </div>
                  <!-- Existing Image -->
                  <div class="form-group mb-3">
                    <label class="form-label fw-bold">Current Image</label><br>
                    <img src="<%= blog.image.url %>" width="120" class="rounded shadow-sm border" alt="Blog Image">
                  </div>
                  <!-- Submit Button -->
                  <div class="text-end">
                    <button type="submit" class="btn btn-primary px-4">Update</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
        <% }); %>
      </tbody>
    </table>
  </div>
</div>
</div>
</div>
</div>
</section>

<!-- modal blog create  -->

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add Blog</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/insertblog" method="post" enctype="multipart/form-data">
          <!-- Title -->
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" class="form-control">
          </div>

          <!-- Description -->
          <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" id="description" class="form-control"></textarea>
          </div>

          <!-- Image Upload -->
          <div class="form-group">
            <label for="image" class="form-label">Upload Image</label>
            <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
          </div>
          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary mt-2">Submit</button>
        </form>

      </div>
    </div>
  </div>
</div>



<%- include("../../layouts/footer.ejs") %>